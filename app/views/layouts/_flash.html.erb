
<% if flash[:error] %>
  <div class="flash text-danger bg-danger center-block"><%= flash[:error] %></div>
<% end %>

<% if flash[:success] %>
  <div class="flash text-success bg-success center-block"><%= flash[:success] %></div>
<% end %>

<% if flash[:info] %>
  <div class="flash text-info bg-info center-block"><%= flash[:info] %></div>
<% end %>

<% if flash[:error] || flash[:success] || flash[:info] %>
  
  <script type ="text/javascript">
    $('.flash').fadeIn('medium').delay(2000).fadeOut('slow');
  </script>
  
<% end %>


