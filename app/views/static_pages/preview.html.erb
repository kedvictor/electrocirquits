<h5>Оновлено: <%= @time %> </h5>

<% @groups.each do |group| %>
  <h4 style="font-weight: bold;"><%= group.title %> | <%= group.speciality.title %> | <%= group.year %></h4>
  
    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>П І Б</th>
                <% group.examinations.each do |examination| %>
                  <th><%= examination.short_title %></th>
                <% end %>
            </tr>
        </thead>
        <tbody>
          <% n = 1 %>
          <% group.students.each do |student| %>
            <% balls = student.balls.index_by &:examination_id %>
            <tr>
                <td><%= n %></td>
                <td><%= student.full_name %></td>
                <% group.examinations.each do |examination| %>
                  <td><%= ball_text(balls[examination.id]) %></td>
                <% end %>
            </tr>
            <% n += 1 %>
          <% end %>
        </tbody>
        
    </table>
  
<% end %>